<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/estrada"
    android:id="@+id/telausuario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="155dp"
        android:layout_height="142dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/auxilio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo"
        android:layout_gravity="center"/>


        <Button
            android:id="@+id/auxilio"
            android:layout_width="320dp"
            android:layout_height="81dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/cadastrodemanda"
            app:layout_constraintBottom_toTopOf="@+id/demandas"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/demandas"
            android:layout_width="308dp"
            android:layout_height="81dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/listademandas"
            app:layout_constraintBottom_toTopOf="@+id/cadastroveiculo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/cadastroveiculo"
            android:layout_width="308dp"
            android:layout_height="81dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/cadastrarveiculo"
            app:layout_constraintBottom_toTopOf="@+id/listaveiculo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Button
            android:id="@+id/listaveiculo"
            android:layout_width="308dp"
            android:layout_height="81dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/listadeveiculoscadastrados"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>

</android.support.constraint.ConstraintLayout>